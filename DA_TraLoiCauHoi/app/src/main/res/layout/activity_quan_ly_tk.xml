<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_marginTop ="30dp"

        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        icon app-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:weightSum="5"
            android:layout_height="0dp">
            <ImageView
                android:layout_weight="4"
                android:id="@+id/imgHinhDaiDien_QLTK"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/avart"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:onClick="HandleChooseImg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Đổi hình đại diện"></TextView>
        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_weight="3"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <EditText
                android:id="@+id/edtTenTK_QLTK"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:background="@drawable/custom_edittext"
                android:hint="Tài khoản">
            </EditText>
            <EditText
                android:id="@+id/edtEmail_QLTK"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:background="@drawable/custom_edittext"
                android:hint="Email">
            </EditText>
            <EditText
                android:id="@+id/edtMatKhauMoi_QLTK"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:background="@drawable/custom_edittext"
                android:hint="Mật khẩu mới">
            </EditText>
            <EditText
                android:id="@+id/edtXacNhanMatKhau_QLTK"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:background="@drawable/custom_edittext"
                android:hint="Xác nhận mật khẩu">
            </EditText>
            <Button
                android:id="@+id/btnCapNhat_QLTK"
                android:layout_weight="1"
                android:onClick="HandleCapNhat"
                android:background="@drawable/custom_button"
                android:layout_width="match_parent"
                android:text="Cập nhật"
                android:layout_marginTop="10dp"
                android:textColor="#f8f4f8"
                android:layout_height="0dp"></Button>


        </LinearLayout>


    </LinearLayout>





</RelativeLayout>